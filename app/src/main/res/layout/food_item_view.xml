<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#DFF2FB">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewIngredientNameInFoodItemView"
            android:layout_width="206dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:elegantTextHeight="true"
            android:freezesText="true"
            android:text="Ruoka-aine"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewIngredientWeightInFoodItemView"
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:elegantTextHeight="true"
            android:text="Paino"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewCarbsInGramsInFoodItemView"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:elegantTextHeight="true"
            android:text="Hiilarit"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imgRemoveFood"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/delete" />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>